{
  "tasks": {
    "format:typst:check": "typstyle --diff .",
    "format:typst:write": "typstyle --inplace .",
    "format:deno:check": "deno fmt --check",
    "format:deno:write": "deno fmt",
    "lint:deno:check": "deno lint",
    "lint:deno:fix": "deno lint --fix",
    "build:website": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build-website.ts",
    "test:e2e": "DENO_JOBS=1 deno test -A \"**/*.e2e.test.ts\""
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@1.0.21",
    "@std/path": "jsr:@std/path@1.1.4",
    "@std/toml": "jsr:@std/toml@1.0.11",
    "@std/expect": "jsr:@std/expect@1.0.17",
    "@david/dax": "jsr:@david/dax@0.44.2"
  },
  "fmt": {
    "exclude": [".github/assets/"]
  }
}
